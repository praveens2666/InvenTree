# InvenTree production environment variables
# Edit values below to match your environment BEFORE running docker-compose

# Image tag (stable or latest or a specific tag)
INVENTREE_TAG=stable

# Debugging
INVENTREE_DEBUG=False

# Public site URL (adjust if hosting on a domain)
INVENTREE_SITE_URL=http://localhost:8000
INVENTREE_WEB_PORT=8000

# Database configuration
INVENTREE_DB_ENGINE=postgresql
INVENTREE_DB_NAME=inventree
INVENTREE_DB_USER=inventree
INVENTREE_DB_PASSWORD=changeme
INVENTREE_DB_PORT=5432

# Cache (redis)
INVENTREE_CACHE_HOST=inventree-cache
INVENTREE_CACHE_PORT=6379

# External volume on host where database, media, static, logs, etc. are stored
# CHANGE this to an absolute path on your host where you want persistent data stored.
INVENTREE_EXT_VOLUME=D:/inventree_data

# Worker / gunicorn tuning (optional)
INVENTREE_GUNICORN_WORKERS=4
INVENTREE_BACKGROUND_WORKERS=4

